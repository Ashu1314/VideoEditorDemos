<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
          <com.lansosdk.videoeditor.DrawPadView
            android:id="@+id/id_videoeffect_drawpadview"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dip"
            android:layout_height="0dip"
            android:layout_weight="2"/>
          <TextView 
				    android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/red"
				    android:text="These 9 effects are just examples. The architecture SDK, screen and layer can be arbitrarily superimposed."/>
        <LinearLayout
    	    android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:layout_weight="1">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:id="@+id/id_videoeffect_noeffect"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:background="@drawable/button_onlypress_bg"
					android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip"
					android:text="no effect" android:textColor="@color/white"/>
				<Button
					android:id="@+id/id_videoeffect_export"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:background="@drawable/button_onlypress_bg"
					android:layout_marginLeft="20dip"
					android:layout_marginRight="20dip"
					android:text="Export"
					android:textColor="@color/red"/>
			</LinearLayout>



		       <LinearLayout 
		           android:layout_width="match_parent" 
		           android:layout_height="wrap_content"
		           android:orientation="horizontal">
		           <Button 
		               android:id="@+id/id_videoeffect_outbody" android:text="Soul out" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
		            <Button 
		               android:id="@+id/id_videoeffect_coloredge" android:text="shake" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
		             <Button 
		               android:id="@+id/id_videoeffect_cuowei" android:text="dislocation" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
				</LinearLayout>
             
		        <LinearLayout 
		           android:layout_width="match_parent" 
		           android:layout_height="wrap_content"
		           android:orientation="horizontal">
		           
		           <Button 
		               android:id="@+id/id_videoeffect_image_mirror" android:text="Mirror" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
		            <Button 
		               android:id="@+id/id_videoeffect_bg_blur" android:text="blur background" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
		             <Button 
		               android:id="@+id/id_videoeffect_16sublay" android:text="16 boxes" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
				</LinearLayout>
				
		         <LinearLayout 
		           android:layout_width="match_parent" 
		           android:layout_height="wrap_content"
		           android:orientation="horizontal">
		           
		           <Button 
		               android:id="@+id/id_videoeffect_invert" android:text="negative" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
		            <Button 
		               android:id="@+id/id_videoeffect_fudiao" android:text="Emboss" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
		             <Button 
		               android:id="@+id/id_videoeffect_toon" android:text="Cartoon" android:background="@drawable/button_onlypress_bg"
		               android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"/>
				</LinearLayout>
         </LinearLayout>
    </LinearLayout>
</RelativeLayout>