<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/id_play_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.lansosdk.videoeditor.TextureRenderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_aedemo_textureview"
            android:layout_margin="20dip" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a video file, the screen is centered. If you need actual testing, please contact us.."
        android:textSize="20dip"
        android:textColor="@color/red"
        android:background="@drawable/bg_info"/>
</RelativeLayout>
