<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_40" >
    
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:background="@drawable/lansong_hint_bg">
       
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:text="Hangzhou Lansong Technology Co., Ltd. \n professional video processing development team\n www.lansongtech.com"
             android:layout_centerInParent="true"
             android:textColor="@color/red"/>
    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select a video source"
        />
    <!-- 横排 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:gravity="fill_horizontal"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content">
             <Button 
                android:id="@+id/id_listmain_record"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                android:text="Recording"
                android:textSize="30sp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_btn_bg_blue"
                android:textColor="@color/white"/>
        </RelativeLayout>
           
         
         <RelativeLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content">
             <Button 
                 android:id="@+id/id_listmain_default"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                android:text="default"
                android:textSize="30sp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_btn_bg_blue"
                android:textColor="@color/white"/>
        </RelativeLayout>
        
          <RelativeLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content">
             <Button 
                android:id="@+id/id_listmain_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="select"
                android:textSize="30sp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_btn_bg_blue"
                android:textColor="@color/white"/>
        </RelativeLayout>
     </LinearLayout>

		<TextView 
             android:id="@+id/id_start_version_hint"
             android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="4"
             android:layout_centerInParent="true"
             android:text="We are engaged in the development and maintenance of commercial mobile video SDK."/>
</LinearLayout>
